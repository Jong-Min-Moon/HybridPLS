setMethod("add", "basisHybridPLS",
###########################################

function(input, other, alpha = 1) {
  # dimension check
  if(
    is_same(input, other)
  ){
    stop("Cannot add")
  # operation
  }else{
    input@basis_coeff_1 <- input@basis_coeff_1 + alpha * (other@basis_coeff_1)
    return(input + alpha * other)
  }
  }

###########################################
)
